<% layout('layouts/boilerplate')%>
<% if (competition) { %>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 30rem;">
        <div class="card-body" style="width: 100%">
            <div class="row">
                <div class="mb-3">
                    <label class="form-label" for="start_date">Start Date</label>
                    <input class="form-control" type="date" id="start_date" name="competition[start_date]"
                    value="<%= `${competition.start_date.getFullYear()}-${String(competition.start_date.getMonth() + 1).padStart(2, '0')}-${String(competition.start_date.getDate()).padStart(2, '0')}` %>" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="end_date">End Date</label>
                    <input class="form-control" type="date" id="end_date" name="competition[end_date]"
                    value="<%= `${competition.end_date.getFullYear()}-${String(competition.end_date.getMonth() + 1).padStart(2, '0')}-${String(competition.end_date.getDate()).padStart(2, '0')}` %>" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="information">Information</label>
                    <textarea class="form-control" id="information" name="competition[information]" disabled><%= competition.information %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="prize">Prize</label>
                    <input class="form-control" type="text" id="prize" name="competition[prize]" value="<%= competition.prize %>" disabled>
                </div>
                <div class="accordion mb-3" id="accordionFavorites">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExercises" aria-expanded="false" aria-controls="collapseExercises">
                                Participants
                            </button>
                        </h2>
                        <div id="collapseExercises" class="accordion-collapse collapse">
                            <ul class="accordion-body">
                                <% for (let participant of participants) { %>
                                    <li>
                                        <%= participant.name + ' - ' + participant.gender + ', ' + participant.weight + 'kg, ' + participant.height + 'cm' %>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
                <form action="/competitions/register" method="GET" class="mx-auto mb-3">
                    <div class="text-center">
                        <% if (participants.find(participant => participant.id === currentUser.id) == undefined) { %>
                            <button class="btn btn-primary btn-block register">Register</button>
                        <% } else { %>
                            <button class="btn btn-secondary btn-block register">Registered</button>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% } %>