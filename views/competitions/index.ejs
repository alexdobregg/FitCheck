<% layout('layouts/boilerplate')%>
<% if (competition) { %>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 30rem;">
        <div class="card-body" style="width: 100%">
            <div class="row">
                <div class="mb-3">
                    <label class="form-label" for="start_date">Start Date</label>
                    <input class="form-control" type="date" id="start_date" name="competition[start_date]"
                    value="<%= `${competition.start_date.getFullYear()}-${String(competition.start_date.getMonth() + 1).padStart(2, '0')}-${String(competition.start_date.getDate()).padStart(2, '0')}` %>" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="end_date">End Date</label>
                    <input class="form-control" type="date" id="end_date" name="competition[end_date]"
                    value="<%= `${competition.end_date.getFullYear()}-${String(competition.end_date.getMonth() + 1).padStart(2, '0')}-${String(competition.end_date.getDate()).padStart(2, '0')}` %>" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="information">Information</label>
                    <textarea class="form-control" id="information" name="competition[information]" disabled><%= competition.information %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="prize">Prize</label>
                    <input class="form-control" type="text" id="prize" name="competition[prize]" value="<%= competition.prize %>" disabled>
                </div>
                <div class="accordion mb-3" id="accordionFavorites">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExercises" aria-expanded="false" aria-controls="collapseExercises">
                                Participants
                            </button>
                        </h2>
                        <div id="collapseExercises" class="accordion-collapse collapse">
                            <ul class="accordion-body">
                                <% for (let participant of participants) { %>
                                    <li>
                                        <%= participant.user.name + ' - ' + participant.user.gender + ', ' + participant.user.weight + 'kg, ' + participant.user.height + 'cm, ' + participant.caloriesBurned + ' calories burned.' %>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <% if (competition.start_date > new Date()) { %>
                        <form action="/competitions/register" method="GET" class="mx-auto col">
                            <% if (participants.find(participant => participant.user.id === currentUser.id) == undefined) { %>
                                <button class="btn btn-primary btn-block">Register</button>
                            <% } else { %>
                                <button class="btn btn-secondary btn-block">Registered</button>
                            <% } %>
                        </form>
                <% } else { %>
                    <% if (participants.find(participant => participant.user.id === currentUser.id)) { %>
                        <form action="/competitions/register" method="GET">
                            <button class="btn btn-secondary btn-block">Registered</button>
                        </form>
                    <% } %>
                <% } %>
            </div>
            <div class="col">
                <% if (competition.start_date <= new Date() && new Date() <= competition.end_date) { %>
                    <% if (participants.find(participant => participant.user.id === currentUser.id)) { %>
                        <button type="button" class="btn btn-primary" style="width:106%" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add calories</button>
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add the calories you burned today</h1>
                                    </div>
                                    <form action="/competitions/<%= competition.id %>/addCalories?_method=PUT" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label class="form-label" for="calories_burned">Calories burned</label>
                                                <input class="form-control" type="number" id="calories_burned" name="calories_burned" max="5000">    
                                            </div>
                                            <div class="mb-3 text-center">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearCalories()">Close</button>
                                                <button type="submit" class="btn btn-primary">Add</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    clearCalories = () => {
        document.getElementById('calories_burned').value = '';
    }
</script>