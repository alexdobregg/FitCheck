<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<% if (!favorites) { %>
    <div class="row">
        <form action="/recipes/index/"  method="GET" class="mx-auto mb-3" onSubmit="submitConvertAction()" target="sub" style="width: 30rem;">
            <input class="form-control" type="search" id="search_bar" placeholder="Search by ingredient keyword" aria-label="Search">
        </form>
    </div>
<% } %>
<% if (allRecipes.length == 0) { %>
    <div style="display: flex; justify-content: center; align-items: center; height: 70vh;">
        <div style="width: 50rem;">
            <div class="text-center" style="font-size: xx-large; color:whitesmoke">
                <% if (!favorites) { %>
                    Currently there are no recipes.
                <% } else { %>
                    Currently there are no recipes added to favorites.
                <% } %>
            </div>
        </div>
    </div>
<% } %>
<% for (let recipe of allRecipes){%>
    <div class="row">
        <div class="container d-flex justify-content-center align-items-center card mb-3" style="width: 30rem;">
            <img class="card-img-top" style="width: 105%"
                src="<%= recipe.image %>">
            <div class="card-body" style="width: 100%">
                <div class="row mb-3 text-center">
                    <h5 class="card-title">
                        <%= recipe.name %>
                        <form
                            action="/users/<%=currentUser.id%>/addFavoriteRecipe/<%=recipe.id%>?_method=PUT"
                            method="POST" target="sub" style="display: inline;">
                            <% if (currentUser.recipes.find(rec => rec.toString() === recipe.id) == undefined) { %>
                                <button class="fa fa-star"></button>
                            <% } else { %>
                                <button class="fa fa-star star-checked"></button>
                            <% } %>
                        </form>
                    </h5>
                </div>
                <div class="accordion mb-3" id="accordionRecipes">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseInstructions<%= recipe.id %>" aria-expanded="false" aria-controls="collapseInstructions<%= recipe.id %>">
                                Instructions
                            </button>
                        </h2>
                        <div id="collapseInstructions<%= recipe.id %>" class="accordion-collapse collapse">
                            <ul class="accordion-body">
                                <p class="card-text" style="white-space: pre-line">
                                    <%= recipe.instructions %>
                                </p>
                            </ul>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseIngredients<%= recipe.id %>" aria-expanded="false" aria-controls="collapseIngredients<%= recipe.id %>">
                                Ingredients
                            </button>
                        </h2>
                        <div id="collapseIngredients<%= recipe.id %>" class="accordion-collapse collapse">
                            <ul class="accordion-body">
                                <% for (let ingredient of recipe.ingredients) { %>
                                    <li>
                                        <%= ingredient.name + " - " + ingredient.quantity + " " + ingredient.unit %>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseNutrition<%= recipe.id %>" aria-expanded="false" aria-controls="collapseNutrition<%= recipe.id %>">
                                Nutrition Facts (per serving)
                            </button>
                        </h2>
                        <div id="collapseNutrition<%= recipe.id %>" class="accordion-collapse collapse">
                            <ul class="accordion-body">
                                <p class="card-text">
                                    <%= `Calories: ${recipe.calories} | Protein: ${recipe.protein}g | Fat: ${recipe.fat}g | Carbs: ${recipe.carbs}g` %>
                                </p>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>

<iframe id="subframe" name="sub" style="display: none;"></iframe>

<script>
    document.querySelectorAll('.fa-star').forEach(element => {
        element.addEventListener('click', async function (e) {
            const url = '/profile';
            if (e.target.classList.contains('star-checked')) {
                e.target.classList.remove('star-checked');
            } else {
                e.target.classList.add('star-checked');
            }
        })
    });

    function submitConvertAction() {
        location.href = document.querySelector('form').getAttribute('action') + this.search_bar.value;
    }
</script>