<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
    <% for (let recipe of allRecipes){%>
        <div class="card mb-3 mx-auto" style="width: 25rem;">
            <div class="row">
                <img class="card-img-top"
                    src="https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80">
                <div class="card-body">
                    <div class="row mb-3">
                        <h5 class="card-title text-center">
                            <%= recipe.name %>
                            <form
                                action="/users/<%=currentUser.id%>/addFavoriteRecipe/<%=recipe.id%>?_method=PUT"
                                method="POST" target="sub" style="display: inline;">
                                <% if (currentUser.recipes.find(rec=> rec.toString() === recipe.id) == undefined) { %>
                                    <button class="fa fa-star"></button>
                                <% } else { %>
                                    <button class="fa fa-star star-checked"></button>
                                <% } %>
                            </form>
                            <iframe id="subframe" name="sub" style="display: none;"></iframe>
                        </h5>
                        <p class="card-text text-center">
                            <%= recipe.instructions %>
                        </p>
                        <div>
                            <ul>
                                <% for (let ingredient of recipe.ingredients) { %>
                                    <li>
                                        <%= ingredient.name + " - " + ingredient.quantity + " " + ingredient.unit %>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<script>
    document.querySelectorAll('.fa-star').forEach(element => {
        element.addEventListener('click', async function (e) {
            const url = '/profile';
            if (e.target.classList.contains('star-checked')) {
                e.target.classList.remove('star-checked');
            } else {
                e.target.classList.add('star-checked');
            }
        })
    });
</script>