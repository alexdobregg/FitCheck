<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 25rem;">
        <div class="card-body">
            <div class="row">
                <h5>Login</h5>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-block col-5 mb-3" type="submit">Login</button>
                        <a class="btn btn-success btn-block col-6 ms-auto mb-3" role="button" href="/register">Create account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>