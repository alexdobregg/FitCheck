<% layout('layouts/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 30rem;">
        <div class="card-body">
            <div class="row">
                <h5><%= currentUser.name %></h5>
                <form action="/profile?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="currentUser[email]" value="<%= currentUser.email %>" disabled>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="age">Age</label>
                            <input class="form-control" type="number" id="age" name="currentUser[birth_date]"
                                value="<%= (new Date(Date.now() - currentUser.birth_date)).getUTCFullYear() - 1970 %>" disabled>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="gender">Gender</label>
                            <select class="form-control select" id="gender" name="currentUser[gender]" required>
                                <% if (currentUser.gender == 'male') { %>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                <% } else if (currentUser.gender == 'female') { %>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                    <option value="other">Other</option>
                                <% } else { %>
                                    <option value="other">Other</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label" for="height">Height(cm)</label>
                            <input class="form-control" type="text" id="height" name="currentUser[height]" value="<%= currentUser.height %>" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="weight">Weight(kg)</label>
                            <input class="form-control" type="text" id="weight" name="currentUser[weight]" value="<%= currentUser.weight %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-block col-4 mx-auto mb-3" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>