<% layout('layouts/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 30rem;">
        <div class="card-body">
            <div class="row">
                <h5><%= user.name %></h5>
                <form action="/users/<%= user.id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="row">
                        <div class="row">
                            <div class="col-8 mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="user[email]" value="<%= user.email %>" disabled>
                            </div>
                            <div class="col-4 mb-3">
                                <label class="form-label" for="role">Role</label>
                                <select class="form-control select" id="role" name="user[role]" required>
                                    <% if (user.role == 'basic') { %>
                                        <option value="basic">Basic</option>
                                        <option value="premium">Premium</option>
                                        <option value="admin">Admin</option>
                                    <% } else if (user.role == 'premium') { %>
                                        <option value="premium">Premium</option>
                                        <option value="basic">Basic</option>
                                        <option value="admin">Admin</option>
                                    <% } else { %>
                                        <option value="admin">Admin</option>
                                        <option value="basic">Basic</option>
                                        <option value="premium">Premium</option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="age">Age</label>
                            <input class="form-control" type="number" id="age" name="user[birth_date]"
                                value="<%= (new Date(Date.now() - user.birth_date)).getUTCFullYear() - 1970 %>" disabled>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="gender">Gender</label>
                            <select class="form-control select" id="gender" name="user[gender]" required>
                                <% if (user.gender == 'male') { %>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                <% } else if (user.gender == 'female') { %>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                    <option value="other">Other</option>
                                <% } else { %>
                                    <option value="other">Other</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label" for="height">Height(cm)</label>
                            <input class="form-control" type="text" id="height" name="user[height]" value="<%= user.height %>" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="weight">Weight(kg)</label>
                            <input class="form-control" type="text" id="weight" name="user[weight]" value="<%= user.weight %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-block col-4 mx-auto mb-3" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>