<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 30rem;">
        <div class="card-body">
            <div class="row">
                <h5><%= user.name + " - Age " + ((new Date(Date.now() - user.birth_date)).getUTCFullYear() - 1970) %></h5>
                <form action="/users/<%= user.id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="row">
                        <div class="col-8 mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="user[email]" value="<%= user.email %>" disabled>
                        </div>
                        <div class="col-4 mb-3">
                            <label class="form-label" for="role">Role</label>
                            <select class="form-control select" id="role" name="user[role]" required>
                                <% for (let role of roles) { %>
                                    <option value="<%= role %>"><%= role %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label" for="birth_date">Birth date</label>
                            <input class="form-control" type="date" id="birth_date" name="user[birth_date]"
                                value="<%= `${user.birth_date.getFullYear()}-${String(user.birth_date.getMonth() + 1).padStart(2, '0')}-${String(user.birth_date.getDate()).padStart(2, '0')}` %>">
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="gender">Gender</label>
                            <select class="form-control select" id="gender" name="user[gender]" required>
                                <% for (let gender of genders) { %>
                                    <option value="<%= gender %>"><%= gender %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label" for="height">Height(cm)</label>
                            <input class="form-control" type="text" id="height" name="user[height]" value="<%= user.height %>" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" for="weight">Weight(kg)</label>
                            <input class="form-control" type="text" id="weight" name="user[weight]" value="<%= user.weight %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-block col-4 mb-3" type="submit">Save</button>
                        <a class="btn btn-success btn-block col-4 ms-auto mb-3" href="/users/admin/index">Back to users</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="/javascripts/maxDate.js"></script>