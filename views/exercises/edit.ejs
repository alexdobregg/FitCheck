<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center card mb-4" style="width: 25rem;">
        <div class="card-body">
            <div class="row">
                <form action="/exercises/<%= exercise.id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="row mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="exercise[name]" value="<%= exercise.name %>" required>
                    </div>
                    <div class="row mb-3">
                        <label class="form-label" for="muscle">Muscle</label>
                        <select class="form-control select" id="muscle" name="exercise[muscle]" required>
                            <% for (let [index, muscle] of muscles.entries()) { %>
                                <option value="<%= muscle %>"><%= muscle %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="row mb-3">
                        <label class="form-label" for="instructions">Instructions</label>
                        <textarea class="form-control" id="instructions" name="exercise[instructions]" required><%= exercise.instructions %></textarea>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-block col-4 mb-3" type="submit">Save</button>
                        <a class="btn btn-success btn-block col-7 ms-auto mb-3" href="/exercises/admin/index">Back to exercises</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>